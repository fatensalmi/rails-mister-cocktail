
<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1"><%= @cocktail.name %>'s details</span>
</nav>


<div class="container">
  <div class="row">
    <% @cocktail.doses.each do |dose| %>
    <div class= "col-4">
      <%= dose.ingredient.name.capitalize %> : <%= dose.description %> -
      <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<h2> <%= link_to 'Add a dose to the cocktail !', new_cocktail_dose_path(@cocktail) %></h2>


<%= link_to "Back to cocktails' list", cocktails_path %>

